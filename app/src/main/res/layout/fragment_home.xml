<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#082032">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WorkOutKuy"
                android:textColor="#F0A500"
                android:textSize="90px"
                android:layout_margin="25dp"
                style="@style/CustomFont"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/progress_bar"
                android:layout_width="365dp"
                android:layout_height="145dp"
                app:cardCornerRadius="12dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image6"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="------ "
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textColor="#F0A500"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose your plan"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textColor="#F0A500"
                    android:textStyle="bold"
                    style="@style/CustomFont"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ------"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textColor="#F0A500"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/male"
                    android:layout_width="160dp"
                    android:layout_height="137dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="15dp">
                    <ImageView
                        android:id="@+id/maleImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image4"
                        android:foreground="@color/transparentBlack"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/female"
                    android:layout_width="160dp"
                    android:layout_height="137dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="15dp"
                    >
                    <ImageView
                        android:id="@+id/femaleImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image5"
                        android:foreground="@color/transparentBlack"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/intensityBtn"
                android:layout_width="160dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#334756"
                android:background="@drawable/customborder">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intensity"
                        android:textColor="#F0A500"
                        android:textSize="30dp"
                        style="@style/CustomFont"/>
                    <TextView
                        android:id="@+id/intensity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beginner"
                        android:textColor="#F0A500"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        style="@style/CustomFont"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/setPlan_button"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:backgroundTint="#F0A500"
                android:text="Set Plan"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>